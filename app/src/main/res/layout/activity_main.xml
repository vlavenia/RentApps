<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#E9F7FC"
                            android:paddingTop="70dp"
                            android:paddingBottom="20dp"
                            android:src="@drawable/rectangle92" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/star" />

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/star" />

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/star" />

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/star" />

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/star" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_gravity="center"
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:text="Honda Vario 125"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_extrabold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@drawable/blue_background"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Rp.100.00/Hari"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="57dp"
                            android:layout_height="42dp"
                            android:src="@drawable/rectangle109"
                            android:layout_marginBottom="7dp"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="Matic"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="57dp"
                            android:layout_height="42dp"
                            android:src="@drawable/rectangle110"
                            android:layout_marginBottom="7dp"/>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:text="2015"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="57dp"
                            android:layout_height="42dp"
                            android:src="@drawable/rectangle111"
                            android:layout_marginBottom="7dp"/>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="5,5 Liter"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="57dp"
                            android:layout_height="42dp"
                            android:src="@drawable/rectangle112"
                            android:layout_marginBottom="7dp"/>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Pertalite"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="375dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:background="#545F71"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Include"
                                android:textSize="14dp"
                                android:fontFamily="@font/poppins_extrabold"
                                android:textStyle="bold"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="259dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="50dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView12"
                                    tools:ignore="TextSizeCheck"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Helm"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/poppins_medium"/>

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Jas Hujan"
                                    tools:ignore="TextSizeCheck"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/poppins_medium"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="165dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView15"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="2 Buah"
                                    android:fontFamily="@font/poppins_medium"/>

                                <TextView
                                    android:id="@+id/textView16"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="2 Buah"
                                    android:fontFamily="@font/poppins_medium"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView14"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/frame123" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="280dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/blue_background"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="Review Customer"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textColor="@color/white"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="314dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/blue_background"
                            android:orientation="horizontal"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_extrabold"
                                android:text="Pesan Sekarang 1"
                                android:textAlignment="center"
                                android:textColor="@color/white"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:background="@drawable/blue_background"
                            android:layout_marginStart="5dp">

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="28dp"
                                android:layout_height="21dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_roundchat"

                                 />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        tools:ignore="MissingConstraints"
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E9F7FC"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <include layout="@layout/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>